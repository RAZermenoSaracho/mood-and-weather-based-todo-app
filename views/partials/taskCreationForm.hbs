{{!-- =========================================================
TASK CREATION FORM MODAL (Handlebars Partial)
Rendered server-side and toggled via JavaScript
========================================================= --}}

<div id="taskCreationModal" class="task-modal-bg d-flex justify-content-center align-items-center d-none">

    <!-- Modal Box -->
    <div class="task-modal p-4">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="text-white mb-0">Add a New Task</h5>

            <!-- Close Modal -->
            <span class="close-form text-white">&times;</span>
        </div>

        <!-- Task Creation Form -->
        <form id="createTaskForm">

            <!-- Task Name -->
            <div class="mb-3">
                <input id="taskName" name="taskName" type="text" class="form-control task-input" placeholder="Task name"
                    required>
            </div>

            <!-- Task Description -->
            <div class="mb-3">
                <input id="taskDesc" name="taskDesc" type="text" class="form-control task-input"
                    placeholder="Task description">
            </div>

            <!-- Due Date -->
            <div class="mb-4">
                <input id="taskDate" name="taskDate" type="date" class="form-control task-input" required>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn create-task-btn w-100">
                Create Task
            </button>

        </form>

    </div>
</div>